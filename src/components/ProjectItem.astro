---
import Pill from "./Pill.astro";
import PillSkill from "./PillSkill.astro";
import GitHub from "../icons/gitHub.astro";
import Link from "../icons/linkIcon.astro";
const { title, description, image, link, tags, git } = Astro.props;
---

<article class="my-16 flex flex-col m-w-lg lg:flex-row md:flex-row space-x-0">
  <img
    src={image}
    alt={title}
    class="h-64 object-cover rounded-lg w-md md:mr-8 hover:scale-110 transition-transform duration-300"
  />
  <div class="w-full my-5 md:my-0 md:mx-16 md:w-1/2 md:max-w-lg lg:mx-16">
    <h3 class="text-xl font-semibold dark:text-white">{title}</h3>
    <ul class="flex flex-wrap gap-x-2">
      {
        tags.map((tag: any) => (
          <li>
            <PillSkill styles={tag.class}>
              <tag.icon class="w-4 h-4" />
              {tag.name}
            </PillSkill>
          </li>
        ))
      }
    </ul>
    <p
      class="relative flex flex-col gap-2 pb-4 my-2 text-gray-600 dark:text-gray-300 md:col-span-3"
    >
      {description}
    </p>
    <div>
      <div class="flex flex-wrap gap-2">
        {
          git && (
            <Pill href={git}>
              <GitHub class="w-4 h-4" />
              Ver CÃ³digo
            </Pill>
          )
        }
        {
          link && (
            <Pill href={link}>
              <Link class="w-4 h-4" />
              Ver proyecto
            </Pill>
          )
        }
      </div>
    </div>
  </div>
</article>
